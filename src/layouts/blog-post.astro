---
import { formatDate } from "@/lib/utils";
import type { CollectionEntry } from "astro:content";
import MainLayout from "./main-layout.astro";

type Props = {
  post: CollectionEntry<"blog">["data"];
  slug: string;
};

const slug = Astro.props.slug;
const { title, description, pubDate, updatedDate, coverImage } = Astro.props.post;
---

<MainLayout title={title} description={description}>
  <div class="mx-auto max-w-screen-md py-10">
    <article class="prose max-w-none">
      <img
        class="rounded-xl overflow-hidden"
        width={1020}
        height={510}
        src={coverImage}
        alt=""
        transition:name={"img-" + slug}
      />
      <div class="prose max-w-none">
        <div class="title">
          <div class="date" transition:name={"date-" + slug}>
            {formatDate(pubDate)}
            {
              updatedDate && (
                <div class="last-updated-on">
                  Last updated on {formatDate(updatedDate)}
                </div>
              )
            }
          </div>
          <h1 class="font-heading text-4xl" transition:name={"title-" + slug}>
            {title}
          </h1>
          <p>{description}</p>
          <hr />
        </div>
        <slot />
      </div>
    </article>
  </div>
</MainLayout>
