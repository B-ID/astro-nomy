---
import MainNav from "./main-nav.astro";

const { items } = Astro.props;
---

<header
  class="f-container flex items-center h-18 z-50 sticky top-0 bg-background"
>
  <nav class="flex items-center justify-between w-full">
    <div class="flex items-start gap-6 md:gap-10">
      <MainNav items={items} />
    </div>

    <slot />
  </nav>
</header>
