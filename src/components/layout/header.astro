---
import { cn } from "@/lib/utils";
import MainNav from "./main-nav.astro";

import type { MainNavItem } from "@/types";
import Logo from "../logo.astro";

type Props = {
  items: MainNavItem[];
  className?: string;
};

const { items, className } = Astro.props;
---

<header
  class={cn(
    "flex items-center h-14 md:h-18 z-50 sticky top-0 bg-background",
    className
  )}
>
  <nav class="container flex items-center justify-between w-full">
    <MainNav items={items} />

    <Logo className="flex md:hidden" />

    <slot />
  </nav>
</header>
