---
import { siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";
import type { MainNavItem } from "@/types";
import { Icon } from "astro-icon";

type Props = {
  items: MainNavItem[];
};

const { items } = Astro.props;
const { pathname } = Astro.url;
---

<a href="/" class="hidden items-center space-x-2 md:flex">
  <Icon name="ic:round-rocket-launch" class="h-7 w-7" />
  <span class="hidden text-xl font-heading sm:inline-block">
    {siteConfig.name}
  </span>
</a>

{
  items?.length ? (
    <nav class="hidden gap-6 md:flex">
      {items?.map((item) => (
        <a
          href={item.disabled ? "#" : item.href}
          class={cn(
            "flex items-center font-medium transition-colors hover:text-foreground/80",
            item.href == pathname ? "text-foreground" : "text-foreground/60",
            item.disabled && "cursor-not-allowed opacity-80"
          )}
        >
          {item.title}
        </a>
      ))}
    </nav>
  ) : null
}
