---
import { formatDate } from "@/lib/utils";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"guides">;

const slug = Astro.props.slug;
const guide = Astro.props.data;
---

<article
  class="group relative rounded-lg border p-6 shadow-md transition-shadow hover:shadow-lg"
>
  {
    guide.featured && (
      <span class="absolute right-4 top-4 rounded-full px-3 py-1 text-xs font-medium">
        Featured
      </span>
    )
  }
  <div class="flex flex-col justify-between space-y-4">
    <div class="space-y-2">
      <h2 class="text-xl font-medium tracking-tight">
        {guide.title}
      </h2>
      {
        guide.description && (
          <p class="text-muted-foreground">{guide.description}</p>
        )
      }
    </div>
    {
      guide.pubDate && (
        <p class="text-sm text-muted-foreground">{formatDate(guide.pubDate)}</p>
      )
    }
  </div>
  <a href={`/guides/${slug}/`} class="absolute inset-0">
    <span class="sr-only">View</span>
  </a>
</article>
